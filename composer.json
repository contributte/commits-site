{
	"type": "project",
	"authors": [
		{
			"name": "Petr Kessler",
			"email": "kesspess@gmail.com",
			"homepage": "https://kesspess.cz",
			"role": "Developer"
		}
	],
	"license": ["MIT"],
	"require": {
		"php": ">= 7.1",
		"nette/application": "^3.0",
		"nette/bootstrap": "^3.0",
		"nette/caching": "^3.0",
		"nette/database": "^3.0",
		"nette/di": "^3.0",
		"nette/finder": "^2.5",
		"nette/forms": "^3.0",
		"nette/http": "^3.0",
		"nette/mail": "^3.0",
		"nette/robot-loader": "^3.0",
		"nette/security": "^3.0",
		"nette/utils": "^3.0",
		"latte/latte": "^2.8",
		"tracy/tracy": "^2.6",
		"contributte/console": "^0.8.0"
	},
	"autoload": {
		"classmap": ["app/Bootstrap.php"]
	},
	"require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.0",
		"php-parallel-lint/php-console-highlighter": "^0.4.0",
		"nette/code-checker": "^3.1",
		"nette/tester": "^2.3",
		"phpstan/phpstan": "^0.12.2",
		"phpstan/extension-installer": "^1.0",
		"phpstan/phpstan-strict-rules": "^0.12.0",
		"phpstan/phpstan-nette": "^0.12.0"
	},
	"autoload-dev": {
		"files": [
			"app/shortcuts.php"
		]
	},
	"scripts": {
		"ci": [
			"@phplint",
			"@code-checker app/",
			"@code-checker tests/",
			"@phpstan",
			"@tester"
		],
		"phplint": "parallel-lint --colors app/ tests/",
		"code-checker": "code-checker --eol --fix --strict-types -d",
		"phpstan": "phpstan analyse",
		"tester": "tester -j 8 -C --colors 1 --log var/log/tests.log --temp var/temp tests/",
		"clear-app-cache": "rm -rf var/temp/cache"
	}
}
