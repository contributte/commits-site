{
	"type": "project",
	"authors": [
		{
			"name": "Petr Kessler",
			"email": "kesspess@gmail.com",
			"homepage": "https://kesspess.cz",
			"role": "Developer"
		}
	],
	"license": ["MIT"],
	"require": {
		"php": ">= 8.0",
		"nette/application": "^3.1",
		"nette/bootstrap": "^3.1",
		"nette/caching": "^3.1",
		"nette/database": "^3.1",
		"nette/di": "^3.0",
		"nette/finder": "^2.5",
		"nette/forms": "^3.1",
		"nette/http": "^3.1",
		"nette/mail": "^3.1",
		"nette/robot-loader": "^3.4",
		"nette/security": "^3.1",
		"nette/utils": "^3.2",
		"latte/latte": "^3.0",
		"tracy/tracy": "^2.9",
		"contributte/console": "^0.9"
	},
	"autoload": {
		"classmap": ["app/Bootstrap.php"]
	},
	"require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"nette/code-checker": "^3.2",
		"nette/tester": "^2.4",
		"phpstan/phpstan": "^1.7",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan-strict-rules": "^1.0",
		"phpstan/phpstan-deprecation-rules": "^1.0",
		"phpstan/phpstan-nette": "^1.0",
		"slevomat/coding-standard": "^8.0"
	},
	"autoload-dev": {
		"files": [
			"app/functions.php"
		]
	},
	"scripts": {
		"ci": [
			"@phplint",
			"@phpstan",
			"@code-checker",
			"@coding-standards",
			"@tester"
		],
		"phplint": "parallel-lint --colors app/ tests/ www/",
		"phpstan": "phpstan analyse",
		"code-checker": "code-checker --eol --fix --strict-types -d app/ -d tests/ -d www/",
		"coding-standards": "phpcs --standard=phpcs.xml",
		"tester": "tester -C --colors 1 --log var/log/tests.log --temp var/temp tests/"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
